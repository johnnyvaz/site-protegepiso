---
import card01 from '../assets/cards/card01.png'
import card02 from '../assets/cards/card02.png'
import card03 from '../assets/cards/card03.png'
import card04 from '../assets/cards/card04.png'
import card05 from '../assets/cards/card05.png'
import card06 from '../assets/cards/card06.png'
---

<div class='container mx-auto py-8'>
  <!-- Título -->
  <div class='mb-12 rounded-lg bg-gray-50 p-8 shadow-lg dark:bg-black'>
    <h2
      class='mb-8 text-3xl font-extrabold tracking-tight text-green-900 sm:text-4xl dark:text-gray-100'
    >
      <span class='block dark:text-white'>CONFIRA EM DETALHES</span>
      <span class='block text-green-600 dark:text-green-300'>A PROTEÇÃO DE PISO.</span>
    </h2>
  </div>

  <div class='mx-auto max-w-6xl'>
    <!-- Grade de imagens -->
    <div class='mb-4 grid grid-cols-1 gap-4 sm:grid-cols-2 md:grid-cols-3'>
      <!-- Imagens -->
      <div class='col-span-1'>
        <a href={card01.src}>
          <div class='overflow-hidden rounded-lg shadow-lg'>
            <img src={card01.src} alt='Construction Step 1' class='h-auto w-full object-contain' />
          </div>
        </a>
      </div>
      <div class='col-span-1'>
        <a href={card02.src}>
          <div class='overflow-hidden rounded-lg shadow-lg'>
            <img src={card02.src} alt='Construction Step 2' class='h-auto w-full object-contain' />
          </div>
        </a>
      </div>
      <div class='col-span-1'>
        <a href={card03.src}>
          <div class='overflow-hidden rounded-lg shadow-lg'>
            <img src={card03.src} alt='Construction Step 3' class='h-auto w-full object-contain' />
          </div>
        </a>
      </div>
      <div class='col-span-1'>
        <a href={card04.src}>
          <div class='overflow-hidden rounded-lg shadow-lg'>
            <img src={card04.src} alt='Construction Step 4' class='h-auto w-full object-contain' />
          </div>
        </a>
      </div>
      <div class='col-span-1'>
        <a href={card05.src}>
          <div class='overflow-hidden rounded-lg shadow-lg'>
            <img src={card05.src} alt='Construction Step 6' class='h-auto w-full object-contain' />
          </div>
        </a>
      </div>
      <div class='col-span-1'>
        <a href={card06.src}>
          <div class='overflow-hidden rounded-lg shadow-lg'>
            <img src={card06.src} alt='Construction Step 6' class='h-auto w-full object-contain' />
          </div>
        </a>
      </div>
    </div>
  </div>
</div>
