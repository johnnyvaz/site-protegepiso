---
import { Image } from 'astro:assets'
import payuse from '../assets/capa-protege/pay-use.png'

---
<div class="container mx-auto max-w-5xl px-4 py-12 sm:px-6 lg:px-8 lg:py-16">
  <div class='mt-6 grid grid-cols-2 gap-x-3 md:grid-cols-3'>
      {
              <div class='group relative flex flex-col justify-center text-center'>
                  <div class='aspect-h-1 aspect-w-1 relative mb-4 h-full w-full overflow-hidden group-hover:opacity-75'>
                      <Image
                          src={payuse}
                          alt='pay use'
                          class='h-full w-full object-cover object-center'
                      />
                  </div>
              </div>
      }
  </div>
</div>
